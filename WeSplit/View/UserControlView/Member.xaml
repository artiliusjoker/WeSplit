<UserControl x:Class="WeSplit.View.UserControlView.Member"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSplit.View.UserControlView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
             mc:Ignorable="d" 
             d:DesignHeight="728" d:DesignWidth="1010"
             Name="MembersUC"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid Margin="20, 10, 20, 10" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4* "/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                    VerticalAlignment="Center"
                    TextAlignment="Left"
                    Text="Thêm thành viên"
                    FontSize="20"/>
                <Button Grid.Column="1"
                        Command="{Binding AddMemberCommand}"
                        Margin="0,5,10,5"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Thêm mới địa điểm">
                    <materialDesign:PackIcon
                        Kind="PlusThick"
                        Height="20"
                        Width="20" />
                </Button>
            </Grid>

            <Grid Grid.Row="1"
              Margin="5, 20, 5, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                        Margin="0, 0, 5, 0">
                    <Label Content="Tên thành viên"
                       FontSize="14"
                       FontFamily="../Assets/Fonts/Roboto.ttf #Roboto"/>
                    <Border Margin="5, 10, 5, 10" Grid.Row="1" Grid.Column="0"
                                                materialDesign:HintAssist.Hint="Tên thành viên"
                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                VerticalAlignment="Center" BorderBrush="#FF484848">
                        <TextBox Padding="5, 5, 5, 5"
                            Text="{Binding NewMember.Name}"
                            FontSize="14"
                            TextWrapping="Wrap"
                            BorderThickness="0">
                        </TextBox>
                    </Border>


                    <Label Content="Số điện thoại"
                       Margin="0, 10, 0, 0"
                       FontSize="14"
                       FontFamily="../Assets/Fonts/Roboto.ttf #Roboto"/>
                    <Border Margin="5, 10, 5, 10" Grid.Row="1" Grid.Column="0"
                                                materialDesign:HintAssist.Hint="Số điện thoại"
                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                VerticalAlignment="Center" BorderBrush="#FF484848">
                        <TextBox Padding="5, 5, 5, 5"
                            Text="{Binding NewMember.PhoneNumber}"
                            FontSize="14"
                            TextWrapping="Wrap"
                            BorderThickness="0">
                        </TextBox>
                    </Border>
                </StackPanel>

                
            </Grid>
        </Grid>

        <Grid   Grid.Row="1"
                Margin="20, 15, 20, 15" 
                VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4* "/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                    VerticalAlignment="Center"
                    TextAlignment="Left"
                    Text="Danh sách thành viên"
                    FontSize="20"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft">
                    <Button Grid.Column="1"
                        Command="{Binding ResetViewCommand}"
                        Margin="0,5,10,5"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Làm mới">
                        <materialDesign:PackIcon
                        Kind="Reload"
                        Height="20"
                        Width="20" />
                    </Button>
                    <Button Grid.Column="1"
                        Command="{Binding SaveMembersCommand}"
                        Margin="0,5,10,5"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Lưu danh sách">
                        <materialDesign:PackIcon
                        Kind="ContentSave"
                        Height="20"
                        Width="20" />
                    </Button>
                </StackPanel>
            </Grid>
            <Border Grid.Row="1"
                    Margin="5, 10, 5, 10"
                    BorderThickness="1"
                    VerticalAlignment="Center" 
                    BorderBrush="#FF484848">
                <DataGrid  ScrollViewer.VerticalScrollBarVisibility ="Hidden"
                           Height="300" FontSize="18"
                           ItemsSource="{Binding Members}"
                           CanUserAddRows="False"
                           AutoGenerateColumns="False"
                           HeadersVisibility="All"
                           Padding="5,5,5,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                                    Binding="{Binding MemberID}"
                                    Header="ID"
                                    Width="*"
                                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                    IsReadOnly="True"/>
                        <DataGridTextColumn
                                    Binding="{Binding Name}"
                                    Header="Tên thành viên"
                                    Width="6*"
                                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                    IsReadOnly="False"/>

                        <DataGridTextColumn
                                    Binding="{Binding PhoneNumber}"
                                    Header="Số điện thoại"
                                    Width="5*"
                                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                    IsReadOnly="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
