                                                                    Name="StartDatePicker"
                                                                    Grid.Column="0"
                                                                    SelectedDateChanged="StartDatePicker_SelectedDateChanged">

                                                </DatePicker>
                                                <Label Content="Ngày về"
                                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                               Grid.Row="0"
                                                               Grid.Column="2"/>
                                                <DatePicker Grid.Row="1"
                                                                 Grid.Column="2">

                                                </DatePicker>
                                            </Grid>

                                        </Grid>
                                        <StackPanel Grid.Column="1" 
                                                            Background="#b1b1b1"/>
                                        <Grid Grid.Column="2"
                                                      Margin="10, 3, 10, 0">
